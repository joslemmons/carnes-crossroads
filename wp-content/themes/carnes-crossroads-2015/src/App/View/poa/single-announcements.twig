{% include 'poa/partials/header.twig' %}

<div class="page-header-image" style="background:url( {{ site.theme.link }}/img/placeholder-slider.jpg) no-repeat 50% 50%; background-size: cover;">
    <div class="page-header-title">
        <h1>Announcements</h1>
    </div>
</div>


<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="sub-nav main-sub-nav small-header">
                    <div class="sidebar-title">
                        <a href="/residents/announcements/">&laquo; Back to Announcements</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9 col-right">
                <div class="primary-content">
                    <div class="child-page-content" id="{{ child_page.post_name }}">
                        <div class="child-title">
                            <h3>{{ post.title }}</h3>
                        </div>

                        <div class="child-content">
                            <div class="announcement-img">

                                {% if post.thumbnail %}
                                <img src="{{ post.thumbnail.src|resize(165,165) }}" />
                                {% else %}
                                <img src="{{ site.theme.link }}/img/placeholder-poa-news-img.jpg" />
                                {% endif %}

                            </div>
                            {{ post.content }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% include 'poa/partials/footer.twig' %}