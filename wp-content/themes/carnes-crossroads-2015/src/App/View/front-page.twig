{% extends 'base.twig' %}
{% block template %}

<section class="hero__home" id="intro-video">
    <div class="hero__content-wrap">
        <h1>Featured Headline about life at Carnes Crossroads.</h1>
        <div class="play-btn-container">
            <a href="{{ video_src }}" data-video-height="1080" data-video-width="1920" class="cnicon-play video-play"><span class="play-icon"><img src="{{ template_uri }}/img/play-icon_x2.png"/></span></a>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">View Move-In Ready Homes <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
                <li><a href="">Item 1</a></li>
                <li><a href="">Item 2</a></li>
                <li><a href="">Item 3</a></li>
            </ul>
        </div>
        <a class="btn btn-green">Search</a>
        <div class="hero__map-link"><a href="#">View Area Map</a></div>
    </div>

    <img class="ie-only bg" src="{{ template_uri }}/img/bg-hero-home.jpg">
    <video loop poster="{{ template_uri }}/img/bg-hero-home.jpg">
        <source src="http://dlpnyk6xy3bg9.cloudfront.net/60_noAudio.webm" type="video/webm">
            <source src="http://dlpnyk6xy3bg9.cloudfront.net/60_noAudio.mp4"  type="video/mp4">
    </video>
</section>

<section class="page-content--white">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <div class="block--large" style="background-image: url({{ template_uri }}/img/cc-homes-1.jpg);">
                    <div class="block-tab--bottom-left">
                        <h3>Featured Listing</h3>
                        <p>Browse through our most recent listings</p>
                        <a href="#" class="block-tab__link">View All</a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="block--small" style="background-image: url({{ template_uri }}/img/cc-comm-map.jpg);">
                    <div class="block-tab--bottom-right">
                        <h3>The Community Plan</h3>
                        <p>Neighborhoods &amp; Towns</p>
                        <a href="#" class="block-tab__link">View Plan</a>
                    </div>
                </div>
                <div class="block--button-whats-new">
                    <div class="block__button-inner">
                        <a href="#"><span></span></a>
                        <h3>What's New In Town</h3>
                        <p>Shopping, Dining and More</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="page-content--tan">
    <div class="container">
        <div class="row">
            <h3 class="pull-left">Headline about the community &amp; lifestyle</h3>
            <div class="slider-lg__controls pull-right">
                <span id="prev-lg1"></span>
                <span id="next-lg1"></span>
            </div>
        </div>
        <div class="row slider-lg__wrap" id="slider-lg1">
            <div class="slider-lg__item" style="background-image: url({{ template_uri }}/img/slider-1.jpg);">
                <div class="block-tab--full-bottom">
                    <h3>Schools</h3>
                    <p>Subhead Descriptor</p>
                </div>
            </div>
            <div class="slider-lg__item" style="background-image: url({{ template_uri }}/img/slider-2.jpg);">
                <div class="block-tab--full-bottom">
                    <h3>Parks &amp; Trails</h3>
                    <p>Subhead Descriptor</p>
                </div>
            </div>
            <div class="slider-lg__item" style="background-image: url({{ template_uri }}/img/slider-3.jpg);">
                <div class="block-tab--full-bottom">
                    <h3>Amenities</h3>
                    <p>Subhead Descriptor</p>
                </div>
            </div>
            <div class="slider-lg__item" style="background-image: url({{ template_uri }}/img/slider-4.jpg);">
                <div class="block-tab--full-bottom">
                    <h3>Shopping &amp; Dining</h3>
                    <p>Subhead Descriptor</p>
                </div>
            </div>
            <div class="slider-lg__item" style="background-image: url({{ template_uri }}/img/slider-5.jpg);">
                <div class="block-tab--full-bottom">
                    <h3>The Green Barn</h3>
                    <p>Subhead Descriptor</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="page-content--white-floral">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <div class="block--large" style="background-image: url({{ template_uri }}/img/cc-lowcountry.jpg);">
                    <div class="block-tab--top-left">
                        <h3>Lowcountry Living</h3>
                        <p>Descriptor about Summerville and Charleston</p>
                        <a href="#" class="block-tab__link">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="block--small" style="background-image: url({{ template_uri }}/img/cc-loc-map.jpg);">
                    <div class="block-tab--bottom-right">
                        <h3>Location</h3>
                        <p>What's Nearby</p>
                        <a href="#" class="block-tab__link">View Map</a>
                    </div>
                </div>
                <div class="block--button-news">
                    <div class="block__button-inner">
                        <a href="#"><span></span></a>
                        <h3>News &amp; Events</h3>
                        <p>Find Out What's Happening</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

