        {% include "partials/site-header.twig" %}

        {% block template %}
        {% endblock %}

        {% include "partials/site-footer.twig" %}

        {{ wp_footer() }}

        {% if use_ga %}
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', '{{ ga_code }}', 'auto');
            ga('send', 'pageview');
        </script>
        {% endif %}

        {% if use_crazyegg %}
        <script>
            setTimeout(function () {
                var a = document.createElement("script");
                var b = document.getElementsByTagName("script")[0];
                a.src = document.location.protocol + "//script.crazyegg.com/pages/scripts/0018/5125.js?" + Math.floor(new Date().getTime() / 3600000);
                a.async = true;
                a.type = "text/javascript";
                b.parentNode.insertBefore(a, b)
            }, 1);
        </script>
        {% endif %}

        {% if add_this_src %}
        <script type="text/javascript"
                src="{{ add_this_src }}"
                async="async"></script>
        {% endif %}

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="{{ template_uri }}/bower_components/bxslider-4/dist/jquery.bxslider.min.js"></script>

        <script type="text/javascript">
            $('.dropdown-toggle').dropdown()
        </script>

        <script type="text/javascript">
            $(document).ready(function(){
              $('.slider__wrap').bxSlider({
                slideWidth: 300,
                minSlides: 2,
                maxSlides: 5,
                moveSlides: 1,
                slideMargin: 30,
                pager: false,
                nextSelector: '#slider--next',
                prevSelector: '#slider--prev',
                nextText: '',
                prevText: ''
              });
            });
        </script>

    </body>
</html>
