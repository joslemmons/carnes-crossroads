<html class="no-js print-sheet"> <!--<![endif]-->
    <head>
        <META HTTP-EQUIV="Pragma" CONTENT="no-cache"/>
        <META HTTP-EQUIV="Expires" CONTENT="-1"/>
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <title>Print Property</title>
        <meta name="description" content="{{ seo_description }}"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
        <link rel="apple-touch-icon-precomposed" href="{{ template_uri }}/img/apple-icon.png"/>
        <link rel="shortcut icon" href="{{ template_uri }}/img/favicon.ico" sizes="32x32"/>
        <link rel="stylesheet" href="{{ template_uri }}/wp-content/themes/carnes-crossroads-2015/style.css"/>

        <script src="https://use.typekit.net/slu5gfl.js"></script>
        <script>try{Typekit.load({ async: true });}catch(e){}</script>
    </head>

    <body class="print-sampler">

        <div class="container">
            <div class="row">
                <div class="col-xs-12 logo-header">
                    <img src="{{ template_uri }}/wp-content/themes/carnes-crossroads-2015/img/sampler_header.png">
                </div>
            </div>
            <div class="row">
                {% for property in properties|slice(1, 9) %}
                <div class="col-xs-4 listing-item">
                    <div class="listing-image" style="background-image: url({{ property.getImages[0]|resize(300,200) }})"></div>
                    <h3>{{ property.getAddress }}</h3><p class="listing-price">${{ property.getPurchaseListPrice|number_format }}</p>
                    <p class="listing-details">{% set numDecimalPlaces = 0 %}
                        {% if property.getPropertyType == 'Homesite' %}
                        {% set numDecimalPlaces = 2 %}
                        {% endif %}
                        {% if property.getTotalAreaSquareFootage %}{{ property.getTotalAreaSquareFootage|number_format(numDecimalPlaces) }} {{ property.getTotalAreaSquareFootageUnitOfMeasurement }} / {% endif %}{% if property.getBedroomCount %}{{ property.getBedroomCount }} BR / {% endif %}{% if property.getFullBathroomCount %}{{ property.getFullBathroomCount }} Full Bath{% endif %}{% if property.getHalfBathroomCount %} / {{ property.getHalfBathroomCount }} Half Bath{% endif %}</p>
                    {% if property.getShortDescription %}
                    <p>{{ property.getShortDescription }}</p>
                    {% else %}
                    <p>{{ property.getDescription|truncate(20) }}</p>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="sampler-foot">
                    <div class="col-xs-2">
                        <img class="footer-logo" src="{{ template_uri }}/wp-content/themes/carnes-crossroads-2015/img/carnes_logo_realestate.png">
                    </div>
                    <div class="col-xs-10">
                        <p>513 Wodin Place&nbsp;&nbsp;/&nbsp;&nbsp;Summerville, SC 29486&nbsp;&nbsp;/&nbsp;&nbsp;843.761.8600</p>
                        <p>
                            <a href="http://www.carnescharleston.com/home-finder/search/?includePlans=true">CarnesCharleston.com</a>
                            <img src="{{ template_uri }}/wp-content/themes/carnes-crossroads-2015/img/icon-sampler-fb.png">
                            <img src="{{ template_uri }}/wp-content/themes/carnes-crossroads-2015/img/icon-sampler-ig.png">
                            <img src="{{ template_uri }}/wp-content/themes/carnes-crossroads-2015/img/icon-sampler-tw.png">
                            <img src="{{ template_uri }}/wp-content/themes/carnes-crossroads-2015/img/icon-sampler-yt.png">
                        </p>
                        <img class="disclaimer-logo" src="{{ template_uri }}/wp-content/themes/carnes-crossroads-2015/img/icon-sampler-eho.png">
                        <p class="disclaimer">Chuck Buck, Broker in charge. Obtain the Property Report required by Federal Law and read before signing anything.<br>No Federal Agency has judged the merits or value, if any, of this property. Availability and pricing are subject to change.</p>
                    </div>
                </div>
            </div>
        </div>
        <script>
//            window.print();
        </script>

    </body>
</html>