
<div class="col-lg-3 col-md-4 col-sm-6">
    
    <div class="grid-results-box {% if property.getId == activePropertyId %}active{% endif %} {% if loop.last and nextPageUrl %}infinite-check{% endif %}" data-property-id="{{ property.getId }}"
         data-property-address="{{ property.getAddress|slugify }}"
         {% if loop.last and nextPageUrl %}data-infinite-scroll-next-url="{{ nextPageUrl }}"{% endif %}>
        <a href="/home-finder/properties/{{ property.getAddress|slugify }}/{{ property.getId }}">
            <div class="home-image" style="background:url('{{ property.getFeaturedImage }}') no-repeat 50% 50%; background-size: cover;">
                <div class="type-box">{{ property.builder.title }}</div>
            </div>
        </a>
        <div class="grid-box-content">
            <div class="grid-address">
                {{ property.title }}
            </div>
            <div class="grid-details">

                {% if property.bedrooms or property.bathrooms or property.bathrooms %}
                    <div class="specs">{% if property.bedrooms %}{{ property.bedrooms }} BR /{% endif %}
                        {% if property.full_bathrooms %}{{ property.full_bathrooms }} Full Bath {% endif %}{% if property.half_bathrooms %}/ {{ property.half_bathrooms }} Half Bath{% endif %}
                    </div>
                {% else %}
                    <br>
                {% endif %}
                {% set numDecimalPlaces = 0 %}
                {% if property.getPropertyType == 'Homesite' %}
                    {% set numDecimalPlaces = 2 %}
                {% endif %}
                <div class="sq-ft">{{ property.square_footage }} SQ FT</div>
                <div class="price">{{ property.getPurchaseListPrice }}</div>
            </div>
            <div class="grid-btn">
                <a class="site-btn" href="/home-finder/properties/{{ property.getAddress|slugify }}/{{ property.getId }}">View Listing</a>
            </div>
        </div>
    </div>
</div>
