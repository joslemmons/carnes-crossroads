<div class="primary-page">
    <div class="primary-page-header">
        <div class="logo-container">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-11 col-lg-offset-1">
                        <div class="logo">
                            <a href="/">
                                <img src="{{ template_uri }}/img/daniel-island-logo.png"/>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-title"
             style="background: url('{{ page.thumbnail.src }}') 50% 50% no-repeat; background-size: cover;">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>{{ page.title }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="sub-nav main-sub-nav">
                        {{ include('partials/account/sidebar.twig') }}
                    </div>
                </div>
                <div class="col-md-9 col-right">
                    <div class="primary-content">
                        {{ page.content }}
                    </div>
                    {% block page_content %}
                        {#this will be filled in via ajax#}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
    <div class="footer-logo visible-sm visible-xs">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="logo">
                        <a href="/">
                            <img src="{{ template_uri }}/img/daniel-island-logo-color.png" class="img-responsive"/>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {#<div class="container-fluid">#}
        {#<div class="row">#}
            {#<div class="col-md-offset-3 col-md-9">#}
                {#<img src="{{ template_uri }}/img/footer-streetscape.jpg" alt="Daniel Island Streetscape"#}
                     {#class="img-responsive"/>#}
            {#</div>#}
        {#</div>#}
    {#</div>#}
</div>
<a class="back-top" href="#">
    <svg width="15" height="15">
        <image xlink:href="{{ template_uri }}/img/top-arrow.svg" src="{{ template_uri }}/img/top-arrow.png"
               width="15"
               height="15"/>
    </svg>
</a>