<?xml version="1.0" encoding="UTF-8"?>{{ stylesheet }}
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
        xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for property in properties %}
        <url>
            <loc>{{ property.link }}</loc>
            <lastmod>{{ property.lastModifiedDate|date('Y-m-d') }}</lastmod>
            <changefreq>monthly</changefreq>
            <priority>0.5</priority>
            {% if property.featuredImageSrc %}
                <image:image>
                    <image:loc>{{ property.featuredImageSrc }}</image:loc>
                    <image:caption><![CDATA[{{ property.address }}]]></image:caption>
                </image:image>
            {% endif %}
        </url>
    {% endfor %}
</urlset>
